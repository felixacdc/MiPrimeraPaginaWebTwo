extends ../layout.jade
block contenido
    div(class="col-md-5 center-block quitar-float top-space text-left")
        h1(style="text-align:center;") Agregar Producto  
        form(method="post" action="/menu" style="margin-top:3em;" enctype="multipart/form-data")
            div(class="form-group")
                label Nombre
                input(type="text" name="title" placeholder="Nombre del Producto" class="form-control")
            div(class="form-group")
                label Descripcion
                textarea(name="description" placeholder="Descripcion del Producto" class="form-control")
            div(class="form-group")
                label Costo
                input(type="number" name="pricing" placeholder="Costo del Producto" class="form-control")
            div(class="form-group")
                label Imagen del Producto
                input(type="file" name="avatar" class="form-control")
            div(class="form-group")
                label Contraseña
                input(type="password" name="password" placeholder="Contraseña del Producto" class="form-control")
            div(class="form-group")
                input(type="submit" class="btn btn-info" value="Guardar")
